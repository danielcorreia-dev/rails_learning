<div>
  <button class ="border border-red-800 border-solid text-red-500 px-4 py-2 mb-6 hover:bg-red-500 hover:text-white transition-colors"><%= link_to 'Home', articles_path %></button>
  <h1 class="text-4xl text-red-600 font-semibold mb-3 hover:text-red-800"><%= @article.title %><h1>
  <p class='mb-8 text-xl'><%= @article.body %></p>

  <ul class='text-red-600 mb-12'>
    <li> <%= link_to "Edit", edit_article_path(@article) %> </li>
    <li> <%= link_to "Delete", article_path(@article), data: {
      turbo_method: :delete,
      turbo_confirm: 'Are you sure?'
    }%> </li>
  </ul>

  <div class='mb-3'>
    <h2 class ='text-2xl text-red-500 font-bold'>Comments</h2>
    <%= render @article.comments %>
  </div>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
</div>